package mainPack;

import java.util.Scanner;

public class questao_5 {

	public static void main(String[] args) {
		
		Scanner leia = new Scanner(System.in);
		int sensorluz, sensorpre;
		float sensorpeso;
		System.out.println("Informe o valor para luz (1 para quando há luz, 0 para quando não há): ");
		sensorluz = (leia.nextInt());
		
		System.out.println("Informe se há alguém no ambiente (1 para sim, 0 para não): ");
		sensorpre = (leia.nextInt());
		
		System.out.println("Informe o peso caso haja alguém em cima do sensor de peso): ");
		sensorpeso = (leia.nextFloat());
		
		if (sensorluz== 1 || sensorpre == 1 || sensorpeso > 30) {
			System.out.println("Luz acessa!");
		}
		else {
			System.out.println("Luz apagada.");
		}
		
		
		
		

	}

}
